@using E_Commerce_MVC.Models.UserViewModel
@model LoginViewModel
@{ ViewData["Title"] = "Login"; }
<div class="container">
<!-- Outer Row -->
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="d-flex justify-content-center">
                    <div class="col-lg-6">
                        <div class=" p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                            </div>
                            <form class="user" asp-action="Login" asp-controller="User" method="post">
                                <div class="form-group">
                                    <input class="form-control form-control-user" asp-for="UserName" placeholder="Please Enter you username...">
                                </div>
                                <div class="form-group">
                                    <input class="form-control form-control-user" asp-for="Password" placeholder="Password....">
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input type="checkbox" class="" asp-for="RememberMe">
                                        <label class="form-label" for="customCheck" asp-for="RememberMe">
                                            Remember Me
                                        </label>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Login
                                </button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="register.html">Create an Account!</a>
                            </div>
                        </div>
                    </div>
                </div>
                </>
            </div>
        </div>
    </div>
</div>