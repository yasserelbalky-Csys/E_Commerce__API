@model E_Commerce_MVC.Models.EntitiesViewModel.OrderViewModel
@{
    ViewData["Title"] = "Delete Order";
}
<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">Are you sure you want to delete this order?</p>
            <dl class="row">
                <dt class="col-sm-4">Order Number</dt>
                <dd class="col-sm-8">@Model.OrderNo</dd>
                <dt class="col-sm-4">Customer Name</dt>
                <dd class="col-sm-8">@Model.UserName</dd>
                <dt class="col-sm-4">Phone</dt>
                <dd class="col-sm-8">@Model.PhoneNo</dd>
                <dt class="col-sm-4">Order Date</dt>
                <dd class="col-sm-8">@Model.OrderDate</dd>
                <dt class="col-sm-4">Net Value</dt>
                <dd class="col-sm-8">@Model.NetValue EGP</dd>
            </dl>
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.OrderNo" />
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>