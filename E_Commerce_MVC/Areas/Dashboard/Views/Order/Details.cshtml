@model E_Commerce_MVC.Models.UtilitesSupport.OrderDetailsPageViewModel
@{
    ViewData["Title"] = "Details";
}
<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white d-flex justify-content-between">
            <h4 class="mb-0">Invoice</h4>
            <small>Order #: @Model.Order.OrderNo</small>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="fw-bold">Customer Info</h6>
                    <p class="mb-1">
                        <strong>User Name:</strong> @Model.Order.UserName
                    </p>
                    <p class="mb-1">
                        <strong>User ID:</strong> @Model.Order.UserId
                    </p>
                    <p class="mb-1">
                        <strong>Phone:</strong> @Model.Order.PhoneNo
                    </p>
                    <p class="mb-1">
                        <strong>Card ID:</strong> @Model.Order.UserCardId
                    </p>
                </div>
                <div class="col-md-6">
                    <h6 class="fw-bold">Shipping Info</h6>
                    <p class="mb-1">
                        <strong>Address:</strong> @Model.Order.StreetAddress, @Model.Order.City, @Model.Order.State, @Model.Order.PostalCode
                    </p>
                    <p class="mb-1">
                        <strong>Tracking:</strong> @Model.Order.Traking
                    </p>
                    <p class="mb-1">
                        <strong>Order Date:</strong> @Model.Order.OrderDate
                    </p>
                    <p class="mb-1">
                        <strong>Shipped Date:</strong> @Model.Order.OrderShippedDate
                    </p>
                </div>
            </div>
            <hr />
            <div class="row mb-3">
                <div class="col-md-4">
                    <p>
                        <strong>Order Status:</strong> @Model.Order.OrderStatus
                    </p>
                </div>
                <div class="col-md-4">
                    <p>
                        <strong>Payment Status:</strong> @Model.Order.PaymentStatus
                    </p>
                </div>
                <div class="col-md-4">
                    <p>
                        <strong>Payment Date:</strong> @Model.Order.PaymentDate
                    </p>
                </div>
            </div>
            <hr />
            <h5 class="fw-bold mb-3">Order Summary</h5>
            <div class="row mb-3">
                <div class="col-md-6">
                    <p>
                        <strong>Recipient Name:</strong> @Model.Order.Name
                    </p>
                    <p>
                        <strong>Discount:</strong> @Model.Order.Discount EGP
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <h4>
                        <strong>Total:</strong> @Model.Order.NetValue EGP
                    </h4>
                </div>
            </div>
            <hr />
            <!-- Order Items -->
            <h5 class="fw-bold mt-4 mb-3">Order Items</h5>
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>Item</th>
                        <th>Description</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails) {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.ProductDescription</td>
                            <td>@item.Qty</td>
                            <td>@item.ProductPrice EGP</td>
                            <td>@item.TotalValue EGP</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-end">
            @* <a asp-action="Edit" asp-route-id="@Model.Order.OrderNo" class="btn btn-primary me-2">Edit</a> *@
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>