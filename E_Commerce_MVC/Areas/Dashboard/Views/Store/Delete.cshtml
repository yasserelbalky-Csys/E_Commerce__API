@model E_Commerce_MVC.Models.EntitiesViewModel.StoreViewModel
@{
    ViewData["Title"] = "Delete Store";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}
<div class="container my-5">
    <h1 class="h3 mb-4 text-danger">Delete Store</h1>
    <div class="card shadow">
        <div class="card-body">
            <h3 class="text-center">Are you sure you want to delete this store?</h3>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card border-danger">
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.StoreName)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.StoreName)
                                </dd>
                               
                            </dl>
                            <div class="text-center mt-3">
                                <form asp-action="DeleteConfirmed">
                                    <input name="id" value="@Model.StoreId" type="hidden" />
                                    <input asp-for="b_deleted" class="form-control" type="hidden" />
                                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                                    <a asp-action="Index">Back to List</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>