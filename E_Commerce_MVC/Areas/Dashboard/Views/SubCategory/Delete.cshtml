@model E_Commerce_MVC.Models.EntitiesViewModel.SubCategory

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4 mb-3 w-75">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-light rounded-top d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Delete SubCategory</h5>
                </div>
                <div class="card-header-divider"></div>
                <div class="card-body">
                    <h3>Are you sure you want to delete this?</h3>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.SubCategoryName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.SubCategoryName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.SubCategoryDescription)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.SubCategoryDescription)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.b_deleted)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.b_deleted)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.MainCategoryName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.MainCategoryName)
                        </dd>
                    </dl>
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" name="id" value="@Model.SubCategoryId" />
                        <div class="form-group">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .rounded-3 {
            border-radius: 0.5rem;
        }

        .card-header-divider {
            border-bottom: 1px solid #ddd;
            margin-bottom: 10px;
        }
    </style>
}