@model E_Commerce_MVC.Models.EntitiesViewModel.SubCategory
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<h1>Create SubCategory</h1>
<h4>Sub-Category</h4>
<hr />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="Create">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- SubCategory Name -->
            <div class="mb-4">
                <label asp-for="SubCategoryName" class="form-label">SubCategory Name</label>
                <input asp-for="SubCategoryName" class="form-control" />
                <span asp-validation-for="SubCategoryName" class="text-danger"></span>
            </div>

            <!-- SubCategory Description -->
            <div class="mb-4">
                <label asp-for="SubCategoryDescription" class="form-label">SubCategory Description</label>
                <input asp-for="SubCategoryDescription" class="form-control" />
                <span asp-validation-for="SubCategoryDescription" class="text-danger"></span>
            </div>

            <!-- Main Category Dropdown -->
            <div class="mb-4">
                <label asp-for="MainCategoryId" class="form-label">Main Category</label>
                <select asp-for="MainCategoryId" class="form-control" asp-items="ViewBag.Categories" id="MainCategoryId"></select>
                <span asp-validation-for="MainCategoryId" class="text-danger"></span>
            </div>

            <!-- Main Category Name (readonly) -->
            <div class="mb-4">
                <label asp-for="MainCategoryName" class="form-label">Main Category Name</label>
                <input asp-for="MainCategoryName" class="form-control" id="MainCategoryName" readonly />
            </div>

            <!-- Submit Button -->
            <div class="d-grid mb-4">
                <button type="submit" class="btn btn-gradient-primary">
                    <i class="fas fa-save"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Back to List Link -->
<div class="text-center">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

@section Styles {
    <!-- Custom Gradient Button Style -->
    <style>
        .btn-gradient-primary {
            background: linear-gradient(135deg, #4f46e5, #6366f1);
            color: white;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-gradient-primary:hover {
                background: linear-gradient(135deg, #4338ca, #4f46e5);
                transform: scale(1.05);
            }
    </style>
}

@section Scripts {
    <script>
        // Update MainCategoryName field based on the selected MainCategoryId
        document.getElementById('MainCategoryId').addEventListener('change', function() {
            const selectedCategoryName = this.options[this.selectedIndex].text;
            document.getElementById('MainCategoryName').value = selectedCategoryName;
        });
    </script>
}
