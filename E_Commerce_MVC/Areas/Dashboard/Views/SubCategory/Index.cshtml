@model IEnumerable<E_Commerce_MVC.Models.EntitiesViewModel.SubCategory>

@{
    ViewData["Title"] = "SubCategories";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4 mb-3 w-75">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-light rounded-top d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">SubCategories</h5>
                    <a asp-action="Create" class="btn btn-sm btn-primary rounded-pill">
                        <i class="fas fa-plus"></i> Create New
                    </a>
                </div>
                <div class="card-header-divider"></div>
                <div class="card-body">
                    <div class="table-responsive rounded-3 overflow-hidden">
                        <table class="table table-striped table-bordered table-hover mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.SubCategoryName)</th>
                                    <th>@Html.DisplayNameFor(model => model.SubCategoryDescription)</th>
                                    <th>@Html.DisplayNameFor(model => model.MainCategoryName)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.SubCategoryName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.SubCategoryDescription)</td>
                                        <td>@Html.DisplayFor(modelItem => item.MainCategoryName)</td>
                                        <td>
                                            <a asp-action="Edit" class="btn btn-sm btn-outline-primary rounded-pill" asp-route-id="@item.SubCategoryId">
                                                <i class="fas fa-edit"></i> Edit
                                            </a> |
                                            <a asp-action="Details" class="btn btn-sm btn-outline-secondary rounded-pill" asp-route-id="@item.SubCategoryId">
                                                <i class="fas fa-eye"></i> Details
                                            </a> |
                                            <a asp-action="Delete" class="btn btn-sm btn-outline-danger rounded-pill" asp-route-id="@item.SubCategoryId">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .rounded-3 {
            border-radius: 0.5rem;
        }

        .card-header-divider {
            border-bottom: 1px solid #ddd;
            margin-bottom: 10px;
        }
    </style>
}