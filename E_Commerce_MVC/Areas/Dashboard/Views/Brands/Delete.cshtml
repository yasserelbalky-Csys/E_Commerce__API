@model E_Commerce_MVC.Models.EntitiesViewModel.BrandViewModel
@{
    ViewData["Title"] = "Delete";
}
<div class="container my-5 ">
    <h1 class="h3 mb-4 text-danger">Delete Brand</h1>
    <div class="card shadow">
        <div class="card-body">
            <h3 class="text-center">Are you sure you want to delete this brand?</h3>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card border-danger">
                        <div class="card-body">
                            <h4 class="card-title">Brand Information</h4>
                            <dl class="row">
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.BrandName)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.BrandName)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.BrandDescription)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.BrandDescription)
                                </dd>
                            </dl>
                            <form asp-action="DeleteConfirmed">
                                <input type="hidden" name="id" value="@Model.BrandId" />
                                <button type="submit" class="btn btn-danger btn-block">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>