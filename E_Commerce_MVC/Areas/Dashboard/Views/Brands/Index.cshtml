@model IEnumerable<E_Commerce_MVC.Models.EntitiesViewModel.BrandViewModel>

@{
    ViewData["Title"] = "Brand Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Brands</h1>
        <a class="btn btn-primary" asp-action="Create">
            <i class="fas fa-plus"></i> Create New Brand
        </a>
    </div>

    <!-- Brands Table -->
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h6 class="m-0">Brands Table</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Brand Name</th>
                            <th>Brand Description</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.BrandName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BrandDescription)</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.BrandId" class="btn btn-sm btn-warning me-1">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.BrandId" class="btn btn-sm btn-info me-1">
                                            <i class="fas fa-info-circle"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.BrandId" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center">No brands available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
