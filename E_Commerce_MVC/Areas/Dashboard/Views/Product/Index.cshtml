@model IEnumerable<E_Commerce_MVC.Models.EntitiesViewModel.ProductViewModel>
@{
    ViewData["Title"] = "Products";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}
<div class="container my-2">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Products</h1>
        <a class="btn btn-primary" asp-action="Create">
            <i class="fas fa-plus"></i> New Product
        </a>
    </div>
    <!-- Products Table -->
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h6 class="m-0">Products Table</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th class="col-md-1">Image</th>
                            <th class="col-md-2"> Name</th>
                            <th class="col-md-1"> Description</th>
                            <th class="col-md-2"> Price</th>
                            <th class="col-md-1">Subcategory</th>
                            <th class="text-center col-md-6">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>
                                    <img src="@item.Img_Url" alt="@item.ProductName" width="100" />
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                                <td class="col-md-2">@Html.DisplayFor(modelItem => item.ProductDiscription)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProductPrice)</td>
                                <td>@Html.DisplayFor(modelItem => item.SubcategoryName)</td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-3" style="gap: 1rem;">
                                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.ProductId">Details</a>
                                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>