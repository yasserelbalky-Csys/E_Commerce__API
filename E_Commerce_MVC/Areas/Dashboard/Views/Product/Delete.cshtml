@model E_Commerce_MVC.Models.EntitiesViewModel.ProductViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}
<div class="container my-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Delete Product</h1>
    </div>
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h6 class="m-0">Confirm Deletion</h6>
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this product?</h3>
            <div class="card mt-3">
                <div class="card-body">
                    <!-- Product Details Section -->
                    <dl class="row mb-0">
                        <dt class="col-sm-3 fw-bold">Product Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductName)</dd>
                        <dt class="col-sm-3 fw-bold">Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductDiscription)</dd>
                        <dt class="col-sm-3 fw-bold">Price</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductPrice)</dd>
                        <dt class="col-sm-3 fw-bold">Subcategory</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.SubcategoryName)</dd>
                    </dl>
                </div>
            </div>
            <!-- Deletion Confirmation Form -->
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="ProductId" />
                <div class="mt-4">
                    <input type="submit" value="Delete" class="btn btn-danger me-2" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>