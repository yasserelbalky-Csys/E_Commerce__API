@model E_Commerce_MVC.Models.EntitiesViewModel.Category
@{
    ViewData["Title"] = "Details";
}
<div class="container my-5">
    <h1 class="h3 mb-4">Category Details</h1>
    <div class="card shadow">
        <div class="card-body">
            <!-- Details Section -->
            <dl class="row mb-0">
                <!-- Category Name -->
                <dt class="col-sm-3 fw-bold">Category Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>
                <!-- Category Description -->
                <dt class="col-sm-3 fw-bold">Category Description</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryDescription)</dd>
            </dl>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryId }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>