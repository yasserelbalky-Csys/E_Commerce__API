@model E_Commerce_MVC.Models.EntitiesViewModel.Category
@{
    ViewData["Title"] = "Delete";
}
<div class="container my-5">
    <h1 class="h3 mb-4 text-danger">Delete Category</h1>
    <h3 class="mb-4">Are you sure you want to delete this?</h3>
    <div class="card shadow">
        <div class="card-body">
            <!-- Category Details -->
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Category Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>
                <dt class="col-sm-3 fw-bold">Category Description</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryDescription)</dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <form asp-action="DeleteConfirmed" class="d-inline">
                <input type="hidden" asp-for="CategoryId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>